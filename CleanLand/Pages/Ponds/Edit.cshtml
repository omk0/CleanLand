@page "{id:int}"
@model EditModel
@{
    ViewData["Title"] = "Редагування ставка";
}

<h2>Редагування ставка</h2>

<form method="post">
    <!-- Приховане поле для Id -->
    <input type="hidden" asp-for="Pond.Id" />

    <!-- Поля основної інформації про ставок -->
    <div class="form-group">
        <label asp-for="Pond.Name"></label>
        <input asp-for="Pond.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.District"></label>
        <input asp-for="Pond.District" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.TerritorialCommunity"></label>
        <input asp-for="Pond.TerritorialCommunity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.Settlement"></label>
        <input asp-for="Pond.Settlement" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.Coordinates"></label>
        <input asp-for="Pond.Coordinates" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.Length"></label>
        <input asp-for="Pond.Length" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.Width"></label>
        <input asp-for="Pond.Width" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.Depth"></label>
        <input asp-for="Pond.Depth" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.WaterLevel"></label>
        <input asp-for="Pond.WaterLevel" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.Volume"></label>
        <input asp-for="Pond.Volume" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.LeasedArea"></label>
        <input asp-for="Pond.LeasedArea" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.CadastralNumber"></label>
        <input asp-for="Pond.CadastralNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.WaterSurfaceArea"></label>
        <input asp-for="Pond.WaterSurfaceArea" class="form-control" />
    </div>
    <div class="form-check">
        <input asp-for="Pond.IsDrainable" class="form-check-input" />
        <label asp-for="Pond.IsDrainable" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="Pond.HasHydraulicStructure" class="form-check-input" />
        <label asp-for="Pond.HasHydraulicStructure" class="form-check-label"></label>
    </div>
    <div class="form-group">
        <label asp-for="Pond.HydraulicStructureOwner"></label>
        <input asp-for="Pond.HydraulicStructureOwner" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.River"></label>
        <input asp-for="Pond.River" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.Basin"></label>
        <input asp-for="Pond.Basin" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.Status"></label>
        <input asp-for="Pond.Status" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.Issues"></label>
        <textarea asp-for="Pond.Issues" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Pond.Notes"></label>
        <textarea asp-for="Pond.Notes" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Pond.ImposedFines"></label>
        <input asp-for="Pond.ImposedFines" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.ImposedDamages"></label>
        <input asp-for="Pond.ImposedDamages" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.CollectedFines"></label>
        <input asp-for="Pond.CollectedFines" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pond.CollectedDamages"></label>
        <input asp-for="Pond.CollectedDamages" class="form-control" />
    </div>

    <hr />

    <!-- Поля для вибору пов'язаних сутностей та кнопки редагування -->
    <div class="form-group">
        <label asp-for="Pond.LesseeId">Орендар</label>
        <select asp-for="Pond.LesseeId" asp-items="Model.LesseeSelectList" class="form-control">
            <option value="">-- Виберіть орендаря --</option>
        </select>
        @if (Model.Pond.LesseeId > 0)
        {
            <a asp-page="/Lessees/Edit" asp-route-id="@Model.Pond.LesseeId" class="btn btn-secondary mt-2">Редагувати орендаря</a>
        }
    </div>

    <div class="form-group">
        <label asp-for="Pond.LeaseAgreementId">Договір оренди</label>
        <select asp-for="Pond.LeaseAgreementId" asp-items="Model.LeaseAgreementSelectList" class="form-control">
            <option value="">-- Виберіть договір --</option>
        </select>
        @if (Model.Pond.LeaseAgreementId > 0)
        {
            <a asp-page="/LeaseAgreements/Edit" asp-route-id="@Model.Pond.LeaseAgreementId" class="btn btn-secondary mt-2">Редагувати договір</a>
        }
    </div>

    <div class="form-group">
        <label asp-for="Pond.WaterUsagePermitId">Дозвіл на водокористування</label>
        <select asp-for="Pond.WaterUsagePermitId" asp-items="Model.WaterUsagePermitSelectList" class="form-control">
            <option value="">-- Виберіть дозвіл --</option>
        </select>
        @if (Model.Pond.WaterUsagePermitId > 0)
        {
            <a asp-page="/WaterUsagePermits/Edit" asp-route-id="@Model.Pond.WaterUsagePermitId" class="btn btn-secondary mt-2">Редагувати дозвіл</a>
        }
    </div>

    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a href="../Index" class="btn btn-secondary">Відмінити</a>
</form>
